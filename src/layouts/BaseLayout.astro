---
import NavBar from "../components/componentsLayouts/header/navbar/NavBar.jsx";
import { ClientRouter } from "astro:transitions";
import Footer from "../components/componentsLayouts/Footer"
import "../components/componentsLayouts/footer.css"

// Props para metadatos dinámicos
const { 
  title = "Studio Pixelar | Soluciones Web que Generan Negocios",
  description = "Desarrollamos webs estratégicas que convierten visitantes en clientes.",
  canonicalPath = "/",  // Cambiamos a ruta relativa
  noindex = false,
  ogImage = "/social-share.jpg"
} = Astro.props;

// Configuración global
const SITE_URL = "https://studiopixelar.com";  // Solo un lugar para cambiar
const GA_ID = "G-XXXXXXXXXX";  // Tu ID de Google Analytics
const TWITTER_HANDLE = "@studiopixelar";

// Generamos URL canónica completa
const canonicalUrl = `${SITE_URL}${canonicalPath}`;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <!-- Metadatos básicos -->
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  
  <!-- Título y descripción dinámicos -->
  <title>{title}</title>
  <meta name="description" content={description} />
  
  <!-- Robots -->
  <meta name="robots" content={noindex ? "noindex, nofollow" : "index, follow"} />
  
  <!-- URL Canónica dinámica -->
  <link rel="canonical" href={canonicalUrl} />
  
  <!-- Open Graph (dinámico) -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalUrl} />
  <meta property="og:image" content={ogImage} />
  
  <!-- Twitter Cards (dinámico) -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:site" content={TWITTER_HANDLE} />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={ogImage} />
  
  <!-- Favicon -->
  <link rel="icon" href="/favicon.ico" sizes="any" />
  <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
  
 
  <ClientRouter />
</head>

<body class="bg-gradient-to-r from-gray-800 via-black to-gray-800 text-white min-h-screen">
  <NavBar client:load />
  
  <main class="max-w-7xl mx-auto px-4 py-8">
    <slot /> <!-- Aquí se inyecta el contenido de cada página -->
  </main>

    <Footer client:load/>

</body>

</html>

