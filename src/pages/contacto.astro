---
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/global.css";
import ContactForm from "../components/contacto/ContactForm.jsx";
import ParticlesBackground from "../components/particles/ParticlesBackground";
import { fade } from "astro:transitions";
---

<BaseLayout title="Contacto | Ponte en contacto">
  <div class="contact-page bg-gradient-to-br from-gray-900 via-[#0F0F0F] to-gray-800 text-white font-sans overflow-x-hidden min-h-screen pt-20">
    <!-- Hero Section -->
    <section class="contact-hero py-20 px-4 text-center relative overflow-hidden">
          <ParticlesBackground client:load/>

      <div class="absolute inset-0 opacity-5 bg-[url('https://assets.website-files.com/5e51b3b0337309d672efd94c/5e51ccb1d7d69c3a0a3d8683_noise.png')] pointer-events-none"></div>
      <div class="max-w-4xl mx-auto relative">
        <h1 class="text-5xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-blue-400 to-purple-300 bg-clip-text text-transparent leading-tight"
        transition:name="fade">
          Contáctanos
        </h1>
        <p class="text-xl text-gray-300 max-w-2xl mx-auto">
          ¿Tenés un proyecto en mente? Completa el formulario y nos pondremos en contacto por WhatsApp.
        </p>
      </div>
    </section>

    <!-- Contact Content -->
    <section class="py-16 px-4">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">

          <!-- Contact Form React (envía a WhatsApp) -->
          <div class="contact-card bg-gray-800/50 border border-gray-700 rounded-2xl p-8 shadow-lg">
            <h2 class="text-2xl font-bold text-white mb-8 pb-3 border-b border-gray-700">
              Envíanos un mensaje
            </h2>
            <ContactForm client:load />
          </div>

          <!-- Contact Info + Horarios -->
          <div class="space-y-8">
            <!-- Información de contacto -->
            <div class="contact-card bg-gray-800/50 border border-gray-700 rounded-2xl p-8 shadow-lg">
              <h2 class="text-2xl font-bold text-white mb-8 pb-3 border-b border-gray-700">
                Información de contacto
              </h2>
              <div class="space-y-6">
                <!-- Teléfono / WhatsApp -->
                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 rounded-full bg-blue-500/10 flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-xl font-bold text-white mb-2">Teléfono / WhatsApp</h3>
                    <a
                      href="https://api.whatsapp.com/send/?phone=5491124025510&text=Hola%2C+quiero+consultar+por+..."
                      class="flex items-center gap-1 text-gray-300 hover:text-blue-300 transition-colors"
                      target="_blank"
                      rel="noopener"
                    >
                      <span>+54 9 11 2402 5510</span>
                      <span class="text-sm text-blue-400">(Envíanos un WhatsApp)</span>
                    </a>
                  </div>
                </div>

                <!-- Email -->
                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 rounded-full bg-blue-500/10 flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-xl font-bold text-white mb-2">Email</h3>
                    <a href="mailto:info@studiopixelar.com" class="text-gray-300 hover:underline">info@studiopixelar.com</a>
                  </div>
                </div>

                <!-- Ubicación -->
                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 rounded-full bg-blue-500/10 flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-xl font-bold text-white mb-2">Ubicación</h3>
                    <p class="text-gray-300">Almirante Brown, Buenos Aires, Argentina</p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Horarios de atención -->
            <div class="contact-card bg-gray-800/50 border border-gray-700 rounded-2xl p-8 shadow-lg">
              <h2 class="text-2xl font-bold text-white mb-6">Horarios de atención</h2>
              <div class="space-y-4">
                <div class="flex justify-between border-b border-gray-700 pb-3">
                  <span class="text-gray-300">Lunes - Viernes</span>
                  <span class="text-white font-medium">9:00 AM - 6:00 PM</span>
                </div>
                <div class="flex justify-between border-b border-gray-700 pb-3">
                  <span class="text-gray-300">Sábado</span>
                  <span class="text-white font-medium">10:00 AM - 2:00 PM</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-300">Domingo</span>
                  <span class="text-white font-medium">Cerrado</span>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </section>

    <!-- Map Section -->
    <section class="py-16 px-4">
      <div class="max-w-7xl mx-auto">
        <div class="contact-card bg-gray-800/50 border border-gray-700 rounded-2xl overflow-hidden shadow-lg">
          <h2 class="text-2xl font-bold text-white mb-4 px-8 pt-8">Encuéntranos en el mapa</h2>
          <div class="aspect-video w-full">
            <iframe
              src="https://maps.google.com/maps?q=Almirante%20Brown%2C%20Buenos%20Aires%2C%20Argentina&z=14&output=embed"
              class="w-full h-full border-0"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
            ></iframe>
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

<style is:global>
  .contact-page {
    --primary: 15, 23, 42;
    --secondary: 30, 41, 59;
    --accent: 59, 130, 246;
    --light: 241, 245, 249;
  }

  .contact-hero {
    background: linear-gradient(135deg, rgba(var(--primary), 0.9) 0%, rgba(var(--secondary), 0.9) 100%);
  }

  .contact-card {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    transition: all 0.3s ease;
  }

  .contact-card:hover {
    background: rgba(255, 255, 255, 0.08);
    transform: translateY(-5px);
  }
</style>
